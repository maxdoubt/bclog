<%= form_for(@job) do |f| %>
  <% if @job.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@job.errors.count, "error") %> prohibited this job from being saved:</h2>

      <ul>
      <% @job.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :organization_name %><br>
    <%= f.text_field :organization_name, class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :start_date %><br>
    <%= f.text_field :start_date, class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :end_date %><br>
    <%= f.text_field :end_date, class: 'form-control' %>
  </div>

  <script>
    $(function() {
	  $("#job_start_date").datepicker();
	  $("#job_end_date").datepicker();
    })
  </script>

  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description, class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :profile_id %><br>
    <%= f.number_field :profile_id, class: 'form-control' %>
  </div>

  <% if @job.image.exists? %>
    <div class='field'>
      <%= image_tag @job.image.url(:medium), class: 'img-responsive' %>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :image %><br>
    <%= f.file_field :image, class: 'form-control' %>
  </div>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
