    <%= f.text_field :email, class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :street %><br>
    <%= f.text_field :street, class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :city %><br>
    <%= f.text_field :city, class: 'form-control' %>
  </div>
  <div class="field">
